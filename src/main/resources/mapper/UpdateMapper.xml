<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.spring.mapper.UpdateMapper">

<update id="replyCount" parameterType="java.lang.String">
    update questions set questions.replies = questions.replies +1 where id = #{id}
</update>


</mapper>